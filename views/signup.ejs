<%- include('partials/header2') -%>
    <main id="main1">
        <h3>Signup</h3>
        <section id="signupSection">
            <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <form action="/signup" method="POST">
                <input class="inputForm" type="text" name="userName" placeholder="User Name">
                <input class="inputForm" type="email" name="email" placeholder="Email">
                <input class="inputForm" type="password" name="password" placeholder="Password">
                <input class="inputForm" type="password" name="confirmPassword" placeholder="Confirm Password">
                <input class="submitButton" type="submit">
            </form>
        </section>
        
    </main>
    
<%- include('partials/footer') -%>